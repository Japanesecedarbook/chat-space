      .Top-items__name
        = current_user.name
      .Icon
        = link_to new_group_path do
          = icon('fas', 'edit',class: "Icon__edit")
          %span<>
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog',class: "Icon__cog")
          %span<>
